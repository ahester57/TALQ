<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/points_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confidence Points Remaining: "
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/question_points"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/question_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/points_remaining"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/points_remaining" />


    <RelativeLayout
        android:id="@+id/scrollView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/points_remaining"
        android:layout_marginTop="-1dp"
        app:layout_constraintTop_toBottomOf="@+id/points_remaining"
        android:layout_marginLeft="0dp">

        <Button
            android:id="@+id/A_button"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:enabled="false" />

        <Button
            android:id="@+id/B_button"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/A_button"
            android:enabled="false" />

        <Button
            android:id="@+id/C_button"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/A_button"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:enabled="false" />

        <Button
            android:id="@+id/D_button"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/B_button"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/C_button"
            android:enabled="false" />

        <SeekBar
            android:id="@+id/A_points"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/A_button"
            android:layout_alignLeft="@+id/A_button" />

        <SeekBar
            android:id="@+id/B_points"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/B_button"
            android:layout_alignLeft="@+id/B_button" />

        <SeekBar
            android:id="@+id/C_points"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/C_button"
            android:layout_alignLeft="@+id/C_button" />

        <SeekBar
            android:id="@+id/D_points"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/D_button"
            android:layout_alignLeft="@+id/D_button" />
    </RelativeLayout>


    <Button
        android:id="@+id/prev_question_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous Question"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <Button
        android:id="@+id/next_question_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Question"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
