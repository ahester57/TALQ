<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">casual</item>
        <item name ="windowActionBar">false</item>
        <item name="colorPrimary">@color/color1</item>
        <item name="colorPrimaryDark">@color/color1</item>
        <item name="colorAccent">@color/color4</item>
        <item name="android:windowBackground">@color/color1</item>
    </style>

    <style name="PopupTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/color2</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/color2</item>
        <item name="android:textColorPrimary">@color/color5</item>
        <item name="android:fontFamily">casual</item>
    </style>

</resources>
